<!DOCTYPE html>
<html>
<head>
    <title>Admin</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="jQuery.js"></script>
    <script src="myScript.js"></script>
</head>
<body style="background-repeat: no-repeat;" background="images/member.jpg">
    <ul style="list-style: none; background-color: #d10a46">

    
        <li style="float: right; padding-right: 50px;">
            <a href="~/Admin/Logout" style="text-decoration: none;color: white;">Logout</a>
        </li>
        <li style="float: right; padding-right: 50px;">
            <a href="~/Admin/Profile" style="text-decoration: none;color: white;">Profile</a>
        </li>

    </ul>

    <div style="background-color: #d10a46;color: white;text-align:center;">
        <h3> Admin Panel</h3>

    </div>
    <center>
        <table>

            <td style="background-color: #d10a46;color: white;text-align: center;padding: 10px;width: 40%">
                <h4>Find Member</h4>
                <form method="post"action="~/Admin/Search" a>
                   User Name <input type="text-box" name="user_name" id="user_name" list="userNameList" id="suggest"><br><br>
                    <input type="submit" name="search" value="Search" style="background-color: #d10a46; color: white; width: 80px; height: 30px; border-radius: 10px; border-color: white ">
                    <datalist id="userNameList"></datalist>
                </form>
            </td>
            <td style="background-color: #d10a46;color: white;text-align: center;padding: 10px;width: 40%">
                <h4>Members</h4>

                <a href="~/Admin/ViewAllmember"> 
                   <button type="submit" name="all_member" value="All " style="background-color: #d10a46; color: white; width: 80px; height: 30px; border-radius: 10px; border-color: white;margin-bottom: 10px ">ALL</button></a>
                <a href="~/Admin/Active">
                    <button  name="all_active_member" value="Active" style="background-color: #d10a46; color: white; width: 80px; height: 30px; border-radius: 10px; border-color: white;margin-bottom: 10px ">Active</button></a>
             
            </td>

            <td style="background-color: #d10a46;color: white;text-align: center;padding: 10px;width: 40%">
                <h4>Admin Control Panel</h4>
                <a href="~/Admin/Registration">

                    <button name="create_admin" value="Create Admin " style="background-color: #d10a46; color: white; width: 110px; height: 30px; border-radius: 10px; border-color: white; margin-bottom: 10px ">Create admin
               </button> </a>

                <a href="~/Admin/showAllAdmin">
                    <button type="submit" name="show_admin" value="Show Admin List " style="background-color: #d10a46; color: white; width: 110px; height: 30px; border-radius: 10px; border-color: white;margin-bottom: 10px ">
                        Show All
                        </button></a>

</td>
            <td style="background-color: #d10a46;color: white;text-align: center;padding: 10px;width: 40%">
                <h4>User Control Panel</h4>

                <a href="~/Admin/UserRegistration">
                    <button  name="create_user" value="Create User " style="background-color: #d10a46; color: white; width: 110px; height: 30px; border-radius: 10px; border-color: white;margin-bottom: 10px ">
                  Create  </button></a>
</td>


        </table>
        <div class="container-fluid">
            <div class="container">
                <div class=" col-md-12">



                    @RenderBody()
                </div>

            </div>
        </div>



    </center>

</body>
</html>